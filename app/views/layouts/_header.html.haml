.navbar.navbar-default.navbar-static-top.navbar-fixed-top
  .container
    = button_tag(class: "navbar-toggle", "data-toggle" => "collapse", "data-target" => ".navbar-responsive-collapse") do
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar
    = link_to root_path, class: "navbar-brand" do
      = image_tag("logo.png", alt: "PROTO TYPE - SHARE THE PROTOTYPE", height: "36px")
    .navbar-collapse.collapse.navbar-responsive-collapse
      -if user_signed_in?
        %ul.nav.navbar-nav.navbar-right
          %li.dropdown
            =link_to current_user.name, class: "dropdown-toggle", "aria-expanded" => "false", "data-toggle" => "dropdown" do
              =current_user.name
              %span.caret
            %ul.dropdown-menu{role: "menu"}
              %li
                =link_to("My Page", user_path(current_user))
              %li
                =link_to("Profile Edit", edit_user_path(current_user))
              %li
                =link_to("Logout", destroy_user_session_path, method: :delete)
          %li
            =button_tag(class: "btn btn-primary navbar-btn") do
              =link_to("New Proto", new_prototype_path)
      -else
        %ul.nav.navbar-nav.navbar-right
          %li
            =button_tag(class: "btn btn-primary navbar-btn") do
              =link_to("Get Started", new_user_session_path)
