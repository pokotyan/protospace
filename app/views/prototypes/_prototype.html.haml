.col-sm-4.col-md-3.proto-content
  .thumbnail
    -if current_user == prototype.user
      .thumbnail-link
        %ul.nav.navbar-nav
          %li.dropdown
            =link_to "", class: "dropdown-toggle", aria: { expanded: false } ,data: {toggle: :dropdown } do
              =""
              %span.caret
            %ul.dropdown-menu{role: "menu"}
              %li
                =link_to("編集", edit_prototype_path(prototype))
              %li
                =link_to("削除", prototype_path(prototype), method: :delete)

    = link_to image_tag(prototype.images[0]), prototype_path(prototype)
    .caption
      %h3 #{prototype.title}
      .proto-meta
        .proto-user
          = link_to "by #{prototype.user.name}", user_path(prototype.user)
        .proto-date
          =prototype.updated_at.strftime("%b %d")
      %ul.proto-tag-list.list-inline
        - prototype.web_design_list.each do |tag_name|
          %li
            = link_to tag_name, tag_path(tag_name), class: "btn btn-default"
        - prototype.ui_list.each do |tag_name|
          %li
            = link_to tag_name, tag_path(tag_name), class: "btn btn-default"
        - prototype.application_list.each do |tag_name|
          %li
            = link_to tag_name, tag_path(tag_name), class: "btn btn-default"


